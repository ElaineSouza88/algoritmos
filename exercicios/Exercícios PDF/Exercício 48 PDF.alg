algoritmo "Exercicio48PDF"
// Função : Programa que leia 7 valores e faça a soma.
var
    S, cont, V: INTEIRO
inicio
      S <- 0
      cont <- 1
      Enquanto (cont <= 7) FACA
               Escreva ("Digite o",cont,"º valor: ")
               Leia (V)
               S <- S + V
               cont <- cont + 1
      FimEnquanto
      Escreval ("A soma de todos os números é: ",S)
fimalgoritmo
